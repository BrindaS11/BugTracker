<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
    <Dialog title="Filter Bugs" class="sapUiContentPadding sapUiResponsivePadding sapUiSizeCompact" contentWidth="500px">
        <content>
            <VBox class="sapUiSmallMargin">
                <VBox width="100%" class="sapUiSmallMarginBottom">
                    <Label text="Status" labelFor="idStatusesSelect" />
                    <Select id="idStatusesSelect" width="100%" forceSelection="false" items="{ path: '/Statuses' }">
                        <core:Item key="{name}" text="{name}" />
                    </Select>
                </VBox>

                <VBox width="100%" class="sapUiSmallMarginBottom">
                    <Label text="Priority" labelFor="idPrioritiesSelect" />
                    <Select id="idPrioritiesSelect" width="100%" forceSelection="false"  items="{ path: '/Priorities' }">
                        <core:Item key="{name}" text="{name}" />
                    </Select>
                </VBox>

                <VBox width="100%" class="sapUiSmallMarginBottom">
                        <Label text="Developer ID" labelFor="idDevelopersSelect"/>
                        <Select id="idDevelopersSelect" width="100%" forceSelection="false" items="{ path: '/Developers' }">
                            <core:Item key="{ID}" text="{ID}" />
                        </Select>
                    </VBox>
                </VBox>
        </content>
        <footer>
            <Toolbar>
                <ToolbarSpacer />
                <Button text="Apply" type="Emphasized" press=".onApplyButtonPress" />
                <Button text="Cancel" press=".onCancelButtonPress" />
                <Button text="Clear Filter" press=".onClearFilterButtonPress" />
            </Toolbar>
        </footer>
    </Dialog>
</core:FragmentDefinition>
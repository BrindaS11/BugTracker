<mvc:View controllerName="com.sap.btapp.controller.Main"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:core="sap.ui.core">
    <Page>
        <customHeader>
            <Toolbar>
                <HBox class="customPageTitle">
                    <Text text="Bug Tracker" wrapping="false" class="pageTitle" />
                </HBox>
            </Toolbar>
        </customHeader>
        <content>
            <Table 
                id="idBugsTable"
                items="{
                    path: '/Bugs',
                    parameters: {
                        $count: true,
                        $expand: 'status,priority'
                    }
                }"
                class="sapUiResponsiveMargin"
                mode="MultiSelect"
                width="auto"
                selectionChange=".onSelectionChange"
                itemPress=".onRowPress">
                <headerToolbar>
                    <Toolbar>
                        <SearchField
                            placeholder="Search Bugs"
                            liveChange=".onSearchFieldLiveChange" />
                        <ToolbarSpacer />
                        <Button text="Filter" press=".onFilterButtonPress" />
                        <Button text="Add Bug" press="onAddBugButtonPress" />
                        <Button text="Delete Bug" press="onDeleteBugButtonPress" />
                    </Toolbar>
                </headerToolbar>
                <columns>
                    <Column>
                        <Text text="Title" />
                    </Column>
                    <Column>
                        <Text text="Description" />
                    </Column>
                    <Column>
                        <Text text="Status" />
                    </Column>
                    <Column>
                        <Text text="Priority" />
                    </Column>
                    <Column>
                        <Text text="Developer" />
                    </Column>
                </columns>
                <items>
                    <ColumnListItem type="Active">
                        <cells>
                            <Text text="{title}" />
                            <Text text="{description}" />
                            <ObjectStatus
                                text="{status_name}"
                                state="{
                                    path: 'status_name',
                                    formatter: '.formatter.statusState'
                                }" />
                            <ObjectStatus
                                text="{priority_name}"
                                state="{
                                    path: 'priority_name',
                                    formatter: '.formatter.priorityState'
                                }" />
                            <Text text="{developer_ID}" />
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </content>
    </Page>
</mvc:View>